
<script type="text/javascript">
  $(function () {

    $('#inputIntrodution').keydown(function (e) {

      if (e.ctrlKey && e.keyCode == 13) {
        // Ctrl-Enter pressed
        $("#projectForm").submit();
      }
    });


  });
</script>

<div class="callout callout-info callout-has-icon" role="alert">
  <i class="avc-icon avc-info"></i>
  <h4>小贴士</h4>
  <ul>
    <li>上传附件仅支持<span class="alert-warning">Word, Pdf, Power Point</span>格式的文件</li>
  </ul>
</div>

<form id="projectForm" enctype="multipart/form-data" action="/projects/<%= project.id %>/?token=<%=token%>" method="post">
  <div class="form-group">
    <label class="control-label" for="inputName">
      项目名称
      <b class="has-required bstooltip" title="必填" data-placement="top">Required</b>
    </label>
    <div class="controls">
      <input type="text" name="name" id="inputName" value="<%= project.name %>" class="form-control" placeholder="项目名称" required>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label" for="inputType">
      行业
      <b class="has-required bstooltip" title="必填" data-placement="top">Required</b>
    </label>
    <div class="controls">
    <select id="inputType" class="form-control" name="type" required>
      <option value="SOCIAL" <% if(project.rawType=='SOCIAL'){ %>selected="selected"<% } %>>社交</option>
      <option value="O2O" <% if(project.rawType=='O2O'){ %>selected="selected"<% } %>>O2O</option>
      <option value="EBUSINESS" <% if(project.rawType=='EBUSINESS'){ %>selected="selected"<% } %>>电商</option>
      <option value="GAME" <% if(project.rawType=='GAME'){ %>selected="selected"<% } %>>游戏</option>
      <option value="EXTRA" <% if(project.rawType=='EXTRA'){ %>selected="selected"<% } %>>其他</option>
    </select>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label" for="inputStatus">
      状态
      <b class="has-required bstooltip" title="必填" data-placement="top">Required</b>
    </label>
    <div class="controls">
    <select id="inputStatus" class="form-control" name="status" required>
      <option value="FINANCING" <% if(project.rawStatus=='FINANCING'){ %>selected="selected"<% } %>>融资中</option>
      <option value="FOLLOWING" <% if(project.rawStatus=='FOLLOWING'){ %>selected="selected"<% } %>>跟踪</option>
      <option value="COMPLETE" <% if(project.rawStatus=='COMPLETE'){ %>selected="selected"<% } %>>已完成</option>
      <option value="ABUNDANT" <% if(project.rawStatus=='ABUNDANT'){ %>selected="selected"<% } %>>已终止</option>
    </select>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label" for="inputRating">
	  评分
      <b class="has-required bstooltip" title="必填" data-placement="top">Required</b>
    </label>
    <div class="controls">
      <input class="rating" name="rating" id="inputRating" data-max="5" data-min="0" data-step="1"
		data-show-clear="true" data-show-caption="false" data-size="xs" value="<%= project.rating %>">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label" for="inputInvestMoney">
      投资额
    </label>
    <div class="controls">
      <input type="number" name="invest_money" id="inputInvestMoney" value="<%= project.invest_money %>" class="form-control" placeholder="投资额" >
    </div>
  </div>
  <div class="form-group">
    <label class="control-label" for="inputContact">
      联系方式
    </label>
    <div class="controls">
      <input type="text" name="contact_way" id="inputContact" value="<%= project.contact_way %>" class="form-control" placeholder="联系方式" >
    </div>
  </div>

  <div class="form-group">
    <label class="control-label" for="inputIntrodution">
      项目描述
      <b class="has-required bstooltip" title="必填" data-placement="top">Required</b>
    </label>
    <div class="controls">
      <textarea rows="10" cols="20" name="introdution" id="inputIntrodution" class="form-control" placeholder="项目描述" required><%= project.introdution %></textarea>
    </div>
  </div>
	<ul class="list-group">
		<% attachs.forEach (function(attach, index){ %>
		<li class="list-group-item">
			<span>附件<%= index+1 %></span>
			<button class="btn btn-primary btn-xs right" 
			onclick="$.post('/attach/delete', {aid:'<%= attach.id %>', pid:'<%= project.id %>'});">删除</button>
			<span></span>
			<a href="<%= attach.get('file').url() %>" class="btn btn-link btn-xs right"><%= attach.get('name') %></a>
		</li>
		<% }); %>
	</ul>
  <div class="form-group">
    <label class="control-label" for="inputAttachment">上传附件</label>
    <div class="controls">
      <input type='file' name='attachment' id='inputAttachment' multiple='true'
	  accept="application/msword,application/pdf,application/vnd.ms-powerpoint"/>
    </div>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">提交</button>
    <a href="/projects" class="btn btn-default">回到项目列表</a>
  </div>

</form>

