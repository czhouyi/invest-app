<form id="projectForm" enctype="multipart/form-data" action="/projects?token=<%=token%>" method="post">
  <div class="form-group">
    <label class="control-label" for="inputName">
      项目名称
      <b class="has-required bstooltip" title="必填" data-placement="top">Required</b>
    </label>
    <div class="controls">
      <input type="text" name="name" id="inputName" class="form-control" placeholder="项目名称" required>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label" for="inputType">
      行业
      <b class="has-required bstooltip" title="必填" data-placement="top">Required</b>
    </label>
    <div class="controls">
    <select id="inputType" class="form-control" name="type" required>
      <option value="SOCIAL" selected="selected">社交</option>
      <option value="O2O">O2O</option>
      <option value="EBUSINESS">电商</option>
      <option value="GAME">游戏</option>
      <option value="EXTRA">其他</option>
    </select>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label" for="inputStatus">
      状态
      <b class="has-required bstooltip" title="必填" data-placement="top">Required</b>
    </label>
    <div class="controls">
    <select id="inputStatus" class="form-control" name="status" required>
      <option value="FINANCING" selected="selected">融资中</option>
      <option value="FOLLOWING">跟踪</option>
      <option value="COMPLETE">已完成</option>
      <option value="ABUNDANT">已终止</option>
    </select>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label" for="inputRating">
	  评分
      <b class="has-required bstooltip" title="必填" data-placement="top">Required</b>
    </label>
    <div class="controls">
      <input type="number" name="rating" id="inputRating" max="5" min="0" class="form-control" placeholder="项目评分" required>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label" for="inputInvestMoney">
      投资额
      <b class="has-required bstooltip" title="必填" data-placement="top">Required</b>
    </label>
    <div class="controls">
      <input type="number" name="invest_money" id="inputInvestMoney" class="form-control" placeholder="投资额" required>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label" for="inputContact">
      联系方式
    </label>
    <div class="controls">
      <input type="text" name="contact_way" id="inputContact" class="form-control" placeholder="联系方式" required>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label" for="inputIntrodution">
      项目描述
      <b class="has-required bstooltip" title="必填" data-placement="top">Required</b>
    </label>
    <div class="controls">
      <textarea rows="10" cols="20" name="introdution" id="inputIntrodution" class="form-control" placeholder="项目描述" required></textarea>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label" for="inputAttachment">上传附件</label>
    <div class="controls">
      <input type='file' name='attachment' id='inputAttachment' multiple='true'
	  accept="application/msword,application/pdf,application/vnd.ms-powerpoint"/>
    </div>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">提交</button>
    <a href="/projects" class="btn btn-default">回到项目列表</a>
  </div>

</form>

